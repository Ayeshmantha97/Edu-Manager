<AnchorPane fx:id="contaxt" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.developersstack.edumanagment.controller.TeacherFormController">
   <children>
      <Label layoutX="14.0" layoutY="14.0" text="Tecacher Managment">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
      <Separator layoutX="13.0" layoutY="45.0" prefHeight="3.0" prefWidth="574.0" />
      <Button layoutX="373.0" layoutY="12.0" mnemonicParsing="false" onAction="#newTeacherOnAction" text="New Teacher">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Button>
      <Button layoutX="484.0" layoutY="12.0" mnemonicParsing="false" onAction="#backToHomeOnAction" text="Back to home">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Button>
      <TextField fx:id="txtID" layoutX="13.0" layoutY="63.0" prefHeight="25.0" prefWidth="126.0" promptText="Teacher ID">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </TextField>
      <TextField fx:id="txtFullname" layoutX="160.0" layoutY="63.0" prefHeight="25.0" prefWidth="126.0" promptText="Full Name">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </TextField>
      <TextField fx:id="txtContact" layoutX="311.0" layoutY="63.0" prefHeight="25.0" prefWidth="126.0" promptText="Contact">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </TextField>
      <TextField fx:id="txtAddress" layoutX="461.0" layoutY="63.0" prefHeight="25.0" prefWidth="126.0" promptText="Address">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </TextField>
      <Button fx:id="btn" layoutX="475.0" layoutY="108.0" mnemonicParsing="false" onAction="#saveOnAction" prefHeight="29.0" prefWidth="98.0" text="Save">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Button>
      <TextField fx:id="txtSearch" layoutX="13.0" layoutY="108.0" prefHeight="29.0" prefWidth="423.0" promptText="Search here">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </TextField>
      <TableView fx:id="tblTeacher" layoutX="14.0" layoutY="149.0" prefHeight="233.0" prefWidth="574.0">
        <columns>
          <TableColumn fx:id="colID" prefWidth="90.0" text="#ID" />
          <TableColumn fx:id="colFullname" prefWidth="125.0" text="Full Name" />
            <TableColumn fx:id="colContact" prefWidth="115.0" text="Contact" />
            <TableColumn fx:id="colAddress" prefWidth="133.0" text="Address" />
            <TableColumn fx:id="colOption" prefWidth="110.0" text="Option" />
        </columns>
      </TableView>
   </children>
</AnchorPane>
