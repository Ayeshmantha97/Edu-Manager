<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="contaxt" prefHeight="216.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.developersstack.edumanagment.controller.RegistrationFormController">
   <children>
      <Label layoutX="27.0" layoutY="14.0" text="New Registation">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
      <Button layoutX="474.0" layoutY="12.0" mnemonicParsing="false" onAction="#backToHomeOnAction" text="Back to home">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Button>
      <Separator layoutX="14.0" layoutY="44.0" prefHeight="0.0" prefWidth="571.0" />
      <TextField fx:id="txtRegistrationID" editable="false" layoutX="27.0" layoutY="58.0" promptText="Registration ID">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </TextField>
      <TextField fx:id="txtStudent" layoutX="226.0" layoutY="58.0" promptText="Student (search here)">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </TextField>
      <ComboBox fx:id="cmbProgram" layoutX="426.0" layoutY="58.0" prefWidth="150.0" promptText="Program" />
      <Button layoutX="474.0" layoutY="171.0" mnemonicParsing="false" onAction="#regusterOnAction" prefHeight="29.0" prefWidth="102.0" text="Register">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Button>
      <Label layoutX="27.0" layoutY="99.0" text="Payment  state">
         <font>
            <Font size="13.0" />
         </font>
      </Label>
      <RadioButton fx:id="rbnPaid" layoutX="27.0" layoutY="133.0" mnemonicParsing="false" text="Paid">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
         <toggleGroup>
            <ToggleGroup fx:id="payment_state" />
         </toggleGroup>
      </RadioButton>
      <RadioButton layoutX="102.0" layoutY="133.0" mnemonicParsing="false" selected="true" text="Pending" toggleGroup="$payment_state">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </RadioButton>
   </children>
</AnchorPane>
